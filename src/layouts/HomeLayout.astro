---
// Component Imports
import Definition from '../components/Definition.astro';
import Favicon from '../components/Favicon.astro';
import CookieBanner from '../components/CookieBanner.vue';
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <Favicon />
    <slot name="MetaSEO" />
    <link rel="stylesheet" href="/style/global.css">

</head>
<body>
    <main>
        <slot name="NavBar" /> 
            <div class="columns mt-1">
                <div class="column is-narrow-tablet is-hidden-mobile ml-6 pl-6"></div>
                <div class="column is-12-mobile ml-0-mobile pl-0-mobile has-text-centered-mobile is-narrow-tablet">
                    <slot name="SideBar" />
                </div>

                <div class="column is-6 ml-5 mt-2 mr-5 mb-5 has-text-centered">
                    <slot name="Main" />
                    <div class="mt-5 mb-5"></div>
                    <Definition/>
                    <div class="mt-6 mb-6"></div>
                    <slot name="Footer" />
            </div>
              <div class="column is-6 is-flex-desktop"></div>
            </div>

            <CookieBanner client:idle/>  
    </main>
</body>
</html>
