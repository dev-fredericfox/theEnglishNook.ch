---
import router from '../data/router.json';

const {lang,location} = Astro.props

let allLang = router[location]



---
<div class="langswitcher columns mb-5">
<div class="column is-10"></div>
<div class="column pt-5">
      {Object.keys(allLang).map((el,idx) => (
         <span><a href={allLang[el].route}>{el == lang ? <b>{allLang[el].link}</b> : allLang[el].link}</a>{idx == 2 ? "" :" | "}</span>
          ))}
</div>

</div>  
<div class="columns mt-3">
  <!-- <div class="column is-1"></div> -->
  <div class="column is-1 ml-6">
  <a class="" href="/">
      <img width="140" height="140" src="/assets/images/plh_logo_theEnglishNook.png" alt="The English Nook logo">
    </a>
  </div>
  <div class="column is-5 mt-1">
    <h1 class="brand-red is-size-2">The Engli<span class="brand-yellow">sh</span> Nook</h1>
    <p class="brand-red">/ˈɪŋɡl(ɪ)<span class="brand-yellow">ʃ</span>nʊk/</p>
  </div>

</div>
    
